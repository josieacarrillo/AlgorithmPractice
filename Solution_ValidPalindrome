class Solution {
    public boolean isPalindrome(String s) {

        String string = s.toLowerCase();
        int j = string.length()-1;
      for(int i = 0; i < string.length(); i++){
          if(Character.isDigit(string.charAt(i))|| Character.isLetter(string.charAt(i)) && Character.isDigit(string.charAt(j -i)) || Character.isLetter(string.charAt(i))  ){
              if(string.charAt(i)!= string.charAt(j-i)){

                  return false;
              }
              else if(!Character.isDigit(string.charAt(i))|| !Character.isLetter(string.charAt(i))) i++;
              else if(!Character.isDigit(string.charAt(j -i)) || !Character.isLetter(string.charAt(i)) ) j--;


          }

      }
        return true;





    }
}
