class Solution {
    public boolean isPalindrome(String s) {

        if(s.length() == 0) return true;

        String sLower = s.toLowerCase();
        int i = sLower.charAt(0);
        int j = sLower.charAt(sLower.length()-1);

        while(j > i ){
            Character first = sLower.charAt(i);
            Character last = sLower.charAt(j-i);
            if(! Character.isLetter(first) || !Character.isDigit(first))
                i++;
            if(! Character.isLetter(last) || !Character.isDigit(last))
                j--;

             if(sLower.charAt(i) != sLower.charAt(j-i)) return false;


        }
        return true;
    }




    }
