class Solution {
    public List<Integer> preorderTraversal(TreeNode root) {
        List<Integer> llist = new LinkedList<Integer>();



        TreeNode curr = root;

        while(curr != null ){
            llist.add(curr.val);

        }

        curr = curr.right;

        if (curr == null && curr.right != null){

            llist.add(curr.right.val);
            curr = curr.right;

        }


        return llist;
    }
}
