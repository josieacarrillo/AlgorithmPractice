class Solution {
    public int findPairs(int[] nums, int k) {

        HashSet<Integer> set = new HashSet<Integer>();
        HashSet<Integer> difference = new HashSet<Integer>();

        for(Integer i : nums){
            set.add(i);
        }
        int count = 0;

        for(Integer i : set){

            System.out.println("i =" + i);

            int dif = Math.abs(i - k);

            System.out.println( "difference =" + dif);

             if( set.contains(dif) ){



                     count ++;

             }


        }



        return count;
    }
}
