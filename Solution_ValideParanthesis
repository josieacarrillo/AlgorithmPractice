class Solution {
    public boolean isValid(String s) {
        int n = s.length()-1;
        if(s.length()%2 != 0){
            return false;
        }
        for(int i = 0; i < s.length()-1; i++){

            char c = s.charAt(i);
            if(s.charAt(i)!= s.charAt(i+1)){
                return false;
            }
             else if(s.charAt(i)!=s.charAt(n-i)){
                 return false;
             }
        }

    }
    return true;
}
