class Solution {
    public boolean detectCapitalUse(String word) {

        char firstCharacter = word.charAt(0);
        char secondCharacter = word.charAt(1);

        if(Character.isUpperCase(firstCharacter)){


            if(Character.isUpperCase(secondCharacter)){

                for(int i = 0; i < word.length(); i++){
                    char character = word.charAt(i);
                    if(!Character.isUpperCase(character)) return false;
                }
            }
            if(Character.isLowerCase(secondCharacter)){
                 for(int i = 1; i < word.length(); i++){
                    char character = word.charAt(i);
                     System.out.println(character);
                    if(!Character.isLowerCase(character)) return false;

            }



        }


        }
        return true;

    }
}
